// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model ReviewItem {
  videoId         String   @id
  title           String
  thumbnailUrl    String
  productName     String   @default("")
  searchQuery     String
  channelTitle    String
  publishedAt     DateTime
  transcript      String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  gptResponse     String   @default("")
  age             String
  region          String
  abv             String
  tags            String
  casks           String
  sentimentScore  Int
  overallScore    Int
  priceScore      Int
  complexityScore Int
  tasteNotes      String
  tasteQuotes     String
  valueQuotes     String
  opinionQuote    String
  reviewSummary   String   @default("")
  blogTitle       String   @default("")
  blogBody        String   @default("")
}

model ProductItem {
  productName     String   @id
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  age             String
  region          String
  abv             String
  tags            String   @default("")
  casks           String
  sentimentScore  Int
  overallScore    Int
  priceScore      Int
  complexityScore Int
  tasteNotes      String
  reviewSummary   String   @default("")
}
